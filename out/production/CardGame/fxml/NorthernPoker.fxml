<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="main.java.controller.NorthernPokerController"
            prefWidth="960" prefHeight="720"
            style="-fx-background-color: #35612c;">

    <!-- Bottom Player -->
    <VBox fx:id="bottomPlayerBox" layoutX="400" layoutY="600" alignment="CENTER" spacing="10"/>

    <!-- Top Player -->
    <VBox fx:id="topPlayerBox" layoutX="400" layoutY="20" alignment="CENTER" spacing="10"/>

    <!-- Left Player -->
    <VBox fx:id="leftPlayerBox" layoutX="50" layoutY="300" alignment="CENTER" spacing="10"/>

    <!-- Right Player -->
    <VBox fx:id="rightPlayerBox" layoutX="780" layoutY="300" alignment="CENTER" spacing="10"/>

    <!-- Center Button: Start only -->
    <VBox fx:id="centerPane" layoutX="430" layoutY="300" alignment="CENTER" spacing="10">
        <Button fx:id="startGameButton" text="Start Game" onAction="#startGameButtonClick"/>
    </VBox>

    <!-- Bottom Right Controls -->
    <VBox layoutX="850" layoutY="660" spacing="10">
        <Button fx:id="playAgainButton" text="Play Again" onAction="#playAgainButtonClick"/>
        <Button fx:id="quitButton" text="Quit" onAction="#quitButtonClick"/>
    </VBox>

</AnchorPane>