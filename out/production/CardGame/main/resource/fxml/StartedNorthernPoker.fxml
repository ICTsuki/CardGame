<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<BorderPane prefHeight="480.0" prefWidth="640.0" stylesheets="@../styles/globals.css, @../styles/game.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.PokerGameController">
    <!-- TOP: Opponent seat -->
    <top>
        <VBox fx:id="topPlayerBox" alignment="CENTER" prefHeight="100.0" spacing="5" BorderPane.alignment="CENTER">
            <!-- Top player will be added here dynamically -->
        </VBox>
    </top>

    <!-- LEFT: Opponent seat -->
    <left>
        <VBox fx:id="leftPlayerBox" alignment="CENTER" prefWidth="100.0" spacing="5" BorderPane.alignment="CENTER">
            <!-- Left player will be added here dynamically -->
        </VBox>
    </left>

    <!-- RIGHT: Opponent seat -->
    <right>
        <VBox fx:id="rightPlayerBox" alignment="CENTER" prefWidth="100.0" spacing="5" BorderPane.alignment="CENTER">
            <!-- Right player will be added here dynamically -->
        </VBox>
    </right>

    <!-- BOTTOM: YOU (the local player) -->
    <bottom>
        <AnchorPane prefHeight="100.0" BorderPane.alignment="CENTER">
            <!-- Bottom Player Box pinned to bottom-left -->
            <VBox fx:id="bottomPlayerBox" alignment="CENTER" prefWidth="100.0" spacing="5" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0">
                <!-- Local player will be added here dynamically -->
            </VBox>

            <!-- Quit button pinned to bottom-right -->
            <Button onAction="#quitButtonClick" text="Quit" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0" />
            <VBox fx:id="controlBox" layoutX="538.0" layoutY="-60.0" prefHeight="100.0" prefWidth="87.0">
                <Button fx:id="playButton" mnemonicParsing="false" text="Play" onAction="#handlePlay"/>
                <Button fx:id="passButton" mnemonicParsing="false" text="Pass" />
            </VBox>
        </AnchorPane>
    </bottom>

    <center>
        <StackPane BorderPane.alignment="CENTER">
            <Pane fx:id="cardPane" style="-fx-background-color: transparent;" >
                <!-- Bài sẽ được thêm ở đây và co giãn theo cửa sổ -->
            </Pane>
            <HBox fx:id="tablePane"  spacing="10" alignment="CENTER"/>
        </StackPane>
    </center>

</BorderPane>
